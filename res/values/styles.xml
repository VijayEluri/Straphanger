<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="bus_stop_button">
    <item name="android:gravity">center</item>
    <item name="android:textColor">#000000</item>
    <item name="android:shadowColor">#cccccc</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.2</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/bus_stop_button</item>
    <item name="android:focusable">false</item>
    <item name="android:clickable">true</item>
    <item name="android:layout_width">171px</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <style name="scare_text">
    <item name="android:gravity">left</item>
    <item name="android:textColor">#000000</item>
    <item name="android:shadowColor">#cccccc</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.2</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/scare_text</item>
    <item name="android:focusable">false</item>
    <item name="android:clickable">false</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="info_text">
    <item name="android:gravity">left</item>
    <item name="android:textColor">#000000</item>
    <item name="android:shadowColor">#cccccc</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.2</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/info_text</item>
    <item name="android:focusable">false</item>
    <item name="android:clickable">false</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

</resources>
